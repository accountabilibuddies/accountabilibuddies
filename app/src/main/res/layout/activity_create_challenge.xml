<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" >

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/cLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:elevation="0dp" >

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                app:theme="@style/ToolBarStyle"
                android:background="@android:color/transparent"
                android:layout_height="?attr/actionBarSize"
                android:minHeight="?attr/actionBarSize" />
        </android.support.design.widget.AppBarLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/grey1"
            android:orientation="vertical"
            android:padding="5dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/left_right_margin"
                android:layout_marginRight="@dimen/left_right_margin"
                android:hint="@string/title"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvTitle"
                android:layout_marginLeft="@dimen/left_right_margin"
                android:layout_marginRight="4dp"
                android:layout_marginTop="4dp"
                android:layout_toLeftOf="@+id/ivCamera"
                android:layout_toStartOf="@+id/ivCamera" />

            <ImageView
                android:id="@+id/ivCamera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/etTitle"
                android:layout_marginRight="@dimen/left_right_margin"
                android:layout_marginTop="8dp"
                android:background="@drawable/camera" />

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etTitle"
                android:layout_marginLeft="@dimen/left_right_margin"
                android:layout_marginRight="@dimen/left_right_margin"
                android:layout_marginTop="8dp"
                android:hint="@string/description"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvDescription"
                android:layout_marginLeft="@dimen/left_right_margin"
                android:layout_marginRight="@dimen/left_right_margin"
                android:layout_marginTop="4dp" />

            <android.support.v7.widget.CardView
                android:id="@+id/cvDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etDescription"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/left_right_margin"
                android:layout_marginRight="@dimen/left_right_margin"
                android:layout_marginTop="12dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="2dp"
                app:cardElevation="5dp">

                <RelativeLayout
                    android:id="@+id/rlDate"
                    style="?whiteBackground"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/etDescription"
                    android:background="@android:color/white">

                    <View
                        android:id="@+id/vertSeparator1"
                        android:layout_width="2dp"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/tvStartDate"
                        android:layout_alignTop="@+id/tvStart"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="4dp"
                        android:layout_marginTop="4dp"
                        android:background="@color/grey1"
                        android:src="@drawable/vertical_line" />

                    <TextView
                        android:id="@+id/tvStart"
                        android:layout_width="wrap_content"
                        android:minWidth="100dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="60dp"
                        android:layout_marginRight="60dp"
                        android:layout_toLeftOf="@+id/vertSeparator1"
                        android:layout_toStartOf="@+id/vertSeparator1"
                        android:text="@string/start"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:gravity="center_horizontal|center_vertical"/>

                    <TextView
                        android:id="@+id/tvEnd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="100dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="60dp"
                        android:layout_marginStart="60dp"
                        android:layout_toEndOf="@+id/vertSeparator1"
                        android:layout_toRightOf="@+id/vertSeparator1"
                        android:text="@string/end"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:gravity="center_horizontal|center_vertical"/>

                    <TextView
                        android:id="@+id/tvStartDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/tvStart"
                        android:layout_alignStart="@+id/tvStart"
                        android:layout_below="@+id/tvStart"
                        android:hint="@string/select_date"
                        android:onClick="setStartDate"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="10dp"
                        android:layout_alignRight="@+id/tvStart"
                        android:layout_alignEnd="@+id/tvStart"
                        android:gravity="center_horizontal|center_vertical"/>

                    <TextView
                        android:id="@+id/tvEndDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@+id/tvEnd"
                        android:layout_alignRight="@+id/tvEnd"
                        android:layout_below="@+id/tvEnd"
                        android:hint="@string/select_date"
                        android:onClick="setEndDate"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="10dp"
                        android:layout_alignLeft="@+id/tvEnd"
                        android:layout_alignStart="@+id/tvEnd"
                        android:gravity="center_horizontal|center_vertical"/>

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/tvCategoryType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cvDate"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text="Type"
                android:textSize="18sp"
                android:textStyle="bold" />

            <android.support.v7.widget.CardView
                android:id="@+id/cvMode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvCategoryType"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/left_right_margin"
                android:layout_marginRight="@dimen/left_right_margin"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="2dp"
                app:cardElevation="5dp">

                <RelativeLayout
                    android:id="@+id/rlMode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@android:color/white">

                    <View
                        android:id="@+id/vertSeparator2"
                        android:layout_width="2dp"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/tvOneOnOne"
                        android:layout_alignTop="@+id/ivOneOnOne"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="4dp"
                        android:layout_marginTop="4dp"
                        android:background="@color/grey1"
                        android:src="@drawable/vertical_line" />

                    <ImageView
                        android:id="@+id/ivOneOnOne"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginEnd="70dp"
                        android:layout_marginRight="70dp"
                        android:layout_marginTop="10dp"
                        android:layout_toLeftOf="@+id/vertSeparator2"
                        android:layout_toStartOf="@+id/vertSeparator2"
                        app:srcCompat="@mipmap/ic_launcher" />

                    <TextView
                        android:id="@+id/tvOneOnOne"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ivOneOnOne"
                        android:text="@string/oneonone"
                        android:layout_alignRight="@+id/ivOneOnOne"
                        android:layout_alignEnd="@+id/ivOneOnOne"
                        android:layout_alignLeft="@+id/ivOneOnOne"
                        android:layout_alignStart="@+id/ivOneOnOne"
                        android:layout_marginTop="5dp"
                        android:textSize="14sp"
                        android:layout_marginBottom="10dp"
                        android:gravity="center_horizontal|center_vertical"/>

                    <ImageView
                        android:id="@+id/ivMulti"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="70dp"
                        android:layout_marginStart="70dp"
                        android:layout_toEndOf="@+id/vertSeparator2"
                        android:layout_toRightOf="@+id/vertSeparator2"
                        app:srcCompat="@mipmap/ic_launcher" />

                    <TextView
                        android:id="@+id/tvMulti"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@+id/ivMulti"
                        android:layout_alignRight="@+id/ivMulti"
                        android:layout_below="@+id/ivMulti"
                        android:text="@string/multi"
                        android:layout_alignLeft="@+id/ivMulti"
                        android:layout_alignStart="@+id/ivMulti"
                        android:layout_marginLeft="-5dp"
                        android:layout_marginRight="-5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"
                        android:textSize="14sp"
                        android:gravity="center_horizontal|center_vertical"/>

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/tvAddFriends"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cvMode"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text="@string/add_friends"
                android:textSize="18sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/rlFriends"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvAddFriends"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/ivFriend1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="17dp"
                    android:layout_marginStart="17dp"
                    app:srcCompat="@mipmap/ic_launcher_round" />

                <FrameLayout
                    android:id="@+id/flAddFriends"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/ivFriend1" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tvFrequencyTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rlFriends"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text="@string/frequency"
                android:textSize="18sp"
                android:textStyle="bold" />

            <android.support.v7.widget.CardView
                android:id="@+id/cvFreq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvFrequencyTag"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/left_right_margin"
                android:layout_marginRight="@dimen/left_right_margin"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="2dp"
                app:cardElevation="5dp">

                <RelativeLayout
                    android:id="@+id/rlFrequency"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvFrequencyTag"
                    android:layout_centerHorizontal="true"
                    android:background="@android:color/white">

                    <Button
                        android:id="@+id/btnMinus"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/vertSeparator3"
                        android:onClick="decFrequency"
                        android:text="@string/minus_sym"
                        android:textColor="@color/deep_purple_500"
                        android:textSize="30dp" />

                    <View
                        android:id="@+id/vertSeparator3"
                        android:layout_width="2dp"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/btnMinus"
                        android:layout_alignTop="@+id/btnMinus"
                        android:layout_marginBottom="4dp"
                        android:layout_marginTop="4dp"
                        android:layout_toLeftOf="@+id/tvFrequency"
                        android:background="@color/grey1"
                        android:src="@drawable/vertical_line" />

                    <TextView
                        android:id="@+id/tvFrequency"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical|center_horizontal"
                        android:minWidth="150dp"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/vertSeparator4"
                        android:layout_width="2dp"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/btnPlus"
                        android:layout_alignTop="@+id/btnPlus"
                        android:layout_marginBottom="4dp"
                        android:layout_marginTop="4dp"
                        android:layout_toRightOf="@+id/tvFrequency"
                        android:background="@color/grey1"
                        android:src="@drawable/vertical_line" />

                    <Button
                        android:id="@+id/btnPlus"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/vertSeparator4"
                        android:onClick="incFrequency"
                        android:text="@string/plus_sym"
                        android:textColor="@color/deep_purple_500"
                        android:textSize="30dp" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </RelativeLayout>
    </android.support.design.widget.CoordinatorLayout>
</layout>