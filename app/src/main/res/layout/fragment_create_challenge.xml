        <TextView
            android:id="@+id/tvFrequencyTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/rlMode"
            android:layout_marginTop="11dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="@string/frequency" />

        <RelativeLayout
            android:id="@+id/rlFrequency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvFrequencyTag"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/btnMinus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/minus_sym"
                android:layout_alignParentLeft="true"
                android:onClick="@{ccvm.onBtnMinusClick}"/>

            <Button
                android:id="@+id/btnPlus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="@string/plus_sym"
                android:onClick="@{ccvm.onBtnPlusClick}"/>

            <TextView
                android:id="@+id/tvFrequency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:text="@{ccvm.frequency}" />

        </RelativeLayout>

        <Button
            android:id="@+id/btnCreate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create"
            android:layout_below="@id/rlFrequency"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:onClick="@{ccvm.onCreateClicked}"/>

    </RelativeLayout>
