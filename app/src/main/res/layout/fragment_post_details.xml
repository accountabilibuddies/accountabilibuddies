<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="postDetailsViewModel"
            type="com.accountabilibuddies.accountabilibuddies.viewmodel.PostDetailsViewModel"/>
    </data>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/flPost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="192dp"
                android:layout_alignParentTop="true"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvComments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvDescription"
                android:layout_above="@+id/lNewComment"
                android:layout_marginTop="12dp"
                android:paddingStart="@dimen/padding_normal"
                android:paddingEnd="@dimen/padding_normal"/>

            <include
                android:id="@+id/lDetails"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_below="@+id/flPost"
                layout="@layout/post_details"/>

            <include
                android:id="@+id/lNewComment"
                android:layout_alignParentBottom="true"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                layout="@layout/enter_comment"/>

        </RelativeLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabLike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/rvComments"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="22dp"
            android:layout_marginRight="22dp"
            android:clickable="true"
            app:layout_anchor="@+id/flPost"
            app:layout_anchorGravity="bottom|right|end"
            app:fab_size="normal"
            app:fab_colorNormal="@color/colorAccent"
            app:fab_colorPressed="@color/light_blue_500"
            app:fab_colorRipple="@color/indigo_500"
            app:srcCompat="@drawable/empty_heart" />

    </android.support.design.widget.CoordinatorLayout>

</layout>