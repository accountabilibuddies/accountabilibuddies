<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="60dp">

    <ImageView
        android:id="@+id/ivCommentProfileImage"
        android:layout_width="@dimen/comment_avatar_size"
        android:layout_height="@dimen/comment_avatar_size"
        android:layout_marginEnd="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginStart="@dimen/avatar_margin"
        android:layout_marginLeft="@dimen/avatar_margin"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/avatar_padding"
        android:layout_gravity="center_vertical"
        app:srcCompat="@drawable/avatar_placeholder"/>

    <TextView
        android:id="@+id/tvCommentOwner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginRight="6dp"
        android:layout_marginEnd="6dp"
        android:layout_toRightOf="@id/ivCommentProfileImage"
        android:padding="3dp"
        android:gravity="center|start"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/tvCommentTime"
        android:layout_marginBottom="4dp"
        android:textSize="14sp"
        android:maxLines="2"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/tvCommentTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:padding="3dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_centerVertical="true"/>
</RelativeLayout>