<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/myHoriSeparator"
        android:layout_width="20dp"
        android:minWidth="20dp"
        android:layout_height="4dp"
        android:layout_toRightOf="@+id/myCircle"
        android:layout_centerVertical="true"
        android:background="@color/grey2"/>

    <ImageView
        android:id="@+id/myPostImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="180dp"
        android:layout_toEndOf="@+id/myCircle"
        android:layout_toRightOf="@+id/myCircle"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        style="?whiteBackground"/>

    <View
        android:id="@+id/myVertSeparator"
        android:layout_width="4dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/myPostImage"
        android:layout_alignBottom="@+id/myPostImage"
        android:layout_centerHorizontal="true"
        android:background="@color/grey2"/>

    <TextView
        android:id="@+id/myPostImageDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@+id/myCircle"
        android:layout_toStartOf="@+id/myCircle"
        android:text="Date"
        android:padding="3dp"
        android:textSize="12sp"
        android:fontFamily="serif-monospace"
        android:background="@drawable/date_boundary"/>

    <ImageView
        android:id="@+id/myCircle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/circle"/>

</RelativeLayout>