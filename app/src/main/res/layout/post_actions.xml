<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="2dp">

    <com.like.LikeButton
        android:id="@+id/heart_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:icon_size="28dp"
        app:anim_scale_factor="1.8"
        app:like_drawable="@drawable/full_heart"
        app:unlike_drawable="@drawable/empty_heart"
        app:circle_end_color="@color/heart_set"
        app:circle_start_color="@color/heart_set"
        app:dots_primary_color="@color/heart_set"
        app:dots_secondary_color="@color/heart_set"/>

    <com.like.LikeButton
        android:id="@+id/comment_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:anim_scale_factor="1.5"
        app:icon_size="24dp"
        app:like_drawable="@drawable/ic_comment"
        app:unlike_drawable="@drawable/ic_comment"
        android:layout_alignTop="@+id/heart_button"
        android:layout_toRightOf="@+id/heart_button"
        android:layout_marginTop="2dp"
        android:layout_alignBottom="@+id/heart_button"
        app:circle_end_color="@color/create_blue"
        app:circle_start_color="@color/create_blue"
        app:dots_primary_color="@color/create_blue"
        app:dots_secondary_color="@color/create_blue"/>
</RelativeLayout>